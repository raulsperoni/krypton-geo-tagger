{
  "order": 10000,
  "version": 1,
  "index_patterns": [
    "montevideo*"
  ],
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    },
    "analysis": {
      "filter": {
        "quitar-stopwords": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": "_spanish_"
        },
        "quitar-stopwords-calle": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": [
            "gral",
            "dr",
            "jose",
            "peatonal",
            "vehicular",
            "juan",
            "bv",
            "ruta",
            "nal",
            "carlos",
            "luis",
            "maria",
            "pedro",
            "rbla",
            "sda",
            "metros",
            "calle"
          ]
        },
        "length_min_3": {
          "type": "length",
          "min": 3
        }
      },
      "analyzer": {
        "calle_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "quitar-stopwords",
            "quitar-stopwords-calle"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "nombre": {
        "type": "text",
        "fields": {
          "tags": {
            "type": "text",
            "analyzer": "calle_analyzer",
            "term_vector": "yes",
            "fielddata": true
          },
          "tags_token_number": {
            "type": "token_count",
            "analyzer": "calle_analyzer"
          }
        }
      },
      "aliases": {
        "type": "text",
        "fields": {
          "tags": {
            "type": "text",
            "analyzer": "calle_analyzer",
            "term_vector": "yes",
            "fielddata": true
          },
          "tags_token_number": {
            "type": "token_count",
            "analyzer": "calle_analyzer"
          }
        }
      },
      "id": {
        "type": "integer"
      },
      "geometry": {
        "type": "geo_shape"
      }
    }
  }
}
