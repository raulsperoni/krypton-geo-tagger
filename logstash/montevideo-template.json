{
  "order": 10000,
  "version": 1,
  "index_patterns": [
    "montevideo*"
  ],
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    },
    "analysis": {
      "filter": {
        "quitar-stopwords": {
          "type": "stop",
          "stopwords": "_spanish_"
        }
      },
      "analyzer": {
        "calle_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "quitar-stopwords"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "nombre": {
        "type": "text",
        "fields": {
          "tags": {
            "type": "text",
            "analyzer": "calle_analyzer",
            "term_vector": "yes",
            "fielddata": true
          },
          "tags_token_number": {
            "type": "token_count",
            "analyzer": "calle_analyzer"
          }
        }
      },
      "aliases": {
        "type": "text",
        "fields": {
          "tags": {
            "type": "text",
            "analyzer": "calle_analyzer",
            "term_vector": "yes",
            "fielddata": true
          },
          "tags_token_number": {
            "type": "token_count",
            "analyzer": "calle_analyzer"
          }
        }
      },
      "id": {
        "type": "integer"
      },
      "geometry": {
        "type": "geo_shape"
      }
    }
  }
}
